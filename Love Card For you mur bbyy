  </div>  <script>
    const copyBtn = document.getElementById('copyBtn');
    const poem = document.getElementById('poem');
    const fromName = document.getElementById('fromName');

    // replace placeholder with prompt for user
    fromName.textContent = "â€” (Your Name)";

    copyBtn.addEventListener('click', async ()=>{
      try{
        await navigator.clipboard.writeText(poem.innerText + "\n\nâ€” " + fromName.textContent.replace('â€” ','').replace('(','').replace(')',''));
        copyBtn.textContent = 'Copied!';
        setTimeout(()=>copyBtn.textContent='Copy Message',1400);
      }catch(e){
        alert('Copy not supported in this browser â€” select the text and copy manually.');
      }
    });

    // simple light toggle for mood
    const toggleBtn = document.getElementById('toggleBtn');
    toggleBtn.addEventListener('click', ()=>{
      document.body.style.background = document.body.style.background.includes('0f1724') ? 'linear-gradient(180deg, rgba(255,93,143,0.04), rgba(0,0,0,0.2))' : 'radial-gradient(ellipse at 10% 10%, #071029 0%, var(--bg) 40%), linear-gradient(180deg, rgba(255,93,143,0.04), rgba(0,0,0,0.2))';
    });
